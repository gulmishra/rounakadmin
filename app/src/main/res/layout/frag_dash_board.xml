<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <View
                    android:id="@+id/viewTitle"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="1dp"
                    android:background="@color/color_primary" />




                <androidx.cardview.widget.CardView
                    android:id="@+id/cvCategories"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/viewTitle"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="12dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="6dp"
                    app:cardElevation="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvStaffTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:background="@color/colorstripe"
                            android:gravity="center_horizontal"
                            android:padding="5dp"
                            android:text="Categories"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="16dp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <androidx.cardview.widget.CardView
                                    android:id="@+id/cvAddCat"
                                    android:layout_width="0dp"
                                    android:layout_height="100dp"
                                    android:layout_margin="5dp"
                                    android:layout_weight="1"
                                    app:cardCornerRadius="50dp">

                                    <LinearLayout
                                        android:background="@drawable/bg_add_new"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:gravity="center"
                                        android:orientation="vertical">

                                        <ImageView
                                            android:layout_width="40dp"
                                            android:layout_height="40dp"
                                            android:src="@drawable/ic_add"
                                            android:tint="@color/white" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="4dp"
                                            android:text="Add New"
                                            android:textColor="@color/white"
                                            android:textSize="14dp" />


                                    </LinearLayout>


                                </androidx.cardview.widget.CardView>

                                <androidx.cardview.widget.CardView
                                    android:id="@+id/cvPresentCategories"
                                    android:layout_width="0dp"
                                    android:layout_height="100dp"
                                    android:layout_margin="5dp"
                                    android:layout_weight="1"
                                    app:cardBackgroundColor="@color/logo_name"
                                    app:cardCornerRadius="6dp">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:gravity="center"
                                        android:orientation="vertical">

                                        <ImageView
                                            android:layout_width="40dp"
                                            android:layout_height="40dp"
                                            android:src="@drawable/ic_cat"
                                            android:tint="@color/white" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="4dp"
                                            android:text="Present"
                                            android:textColor="@color/white"
                                            android:textSize="14dp" />

                                        <TextView
                                            android:id="@+id/tvPresentCat"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="4dp"
                                            android:text="0"
                                            android:textColor="@color/white"
                                            android:textSize="14dp"
                                            android:textStyle="bold" />


                                    </LinearLayout>


                                </androidx.cardview.widget.CardView>
                                <androidx.cardview.widget.CardView
                                    android:id="@+id/cvUpcomingCategories"
                                    android:layout_width="0dp"
                                    android:layout_height="100dp"
                                    android:layout_margin="5dp"
                                    android:layout_weight="1"
                                    app:cardBackgroundColor="@color/colorMediumPriority"
                                    app:cardCornerRadius="6dp">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:gravity="center"
                                        android:orientation="vertical">

                                        <ImageView
                                            android:layout_width="40dp"
                                            android:layout_height="40dp"
                                            android:src="@drawable/ic_cat"
                                            android:tint="@color/white" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="4dp"
                                            android:text="Upcoming"
                                            android:textColor="@color/white"
                                            android:textSize="14dp" />

                                        <TextView
                                            android:id="@+id/tvUpCat"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="4dp"
                                            android:text="0"
                                            android:textColor="@color/white"
                                            android:textSize="14dp"
                                            android:textStyle="bold" />


                                    </LinearLayout>


                                </androidx.cardview.widget.CardView>





                            </LinearLayout>


                        </LinearLayout>


                    </LinearLayout>


                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/cvSubCategories"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/cvCategories"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="12dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="6dp"
                    app:cardElevation="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:background="@color/colorstripe"
                            android:gravity="center_horizontal"
                            android:padding="5dp"
                            android:text="Sub Categories"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="16dp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <androidx.cardview.widget.CardView
                                    android:id="@+id/cvAddSubCat"
                                    android:layout_width="0dp"
                                    android:layout_height="100dp"
                                    android:layout_margin="5dp"
                                    android:layout_weight="1"
                                    app:cardCornerRadius="50dp">

                                    <LinearLayout
                                        android:background="@drawable/bg_add_new"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:gravity="center"
                                        android:orientation="vertical">

                                        <ImageView
                                            android:layout_width="40dp"
                                            android:layout_height="40dp"
                                            android:src="@drawable/ic_add"
                                            android:tint="@color/white" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="4dp"
                                            android:text="Add New"
                                            android:textColor="@color/white"
                                            android:textSize="14dp" />


                                    </LinearLayout>


                                </androidx.cardview.widget.CardView>

                                <androidx.cardview.widget.CardView
                                    android:id="@+id/cvActCat"
                                    android:layout_width="0dp"
                                    android:layout_height="100dp"
                                    android:layout_margin="5dp"
                                    android:layout_weight="1"
                                    app:cardBackgroundColor="@color/logo_name"
                                    app:cardCornerRadius="6dp">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:gravity="center"
                                        android:orientation="vertical">

                                        <ImageView
                                            android:layout_width="40dp"
                                            android:layout_height="40dp"
                                            android:src="@drawable/ic_sub_cat"
                                            android:tint="@color/white" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="4dp"
                                            android:text="Active"
                                            android:textColor="@color/white"
                                            android:textSize="14dp" />

                                        <TextView
                                            android:id="@+id/tvActiveSubCat"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="4dp"
                                            android:text="0"
                                            android:textColor="@color/white"
                                            android:textSize="14dp"
                                            android:textStyle="bold" />


                                    </LinearLayout>


                                </androidx.cardview.widget.CardView>
                                <androidx.cardview.widget.CardView
                                    android:id="@+id/cvInActCat"
                                    android:layout_width="0dp"
                                    android:layout_height="100dp"
                                    android:layout_margin="5dp"
                                    android:layout_weight="1"
                                    app:cardBackgroundColor="@color/colorHighPriority"
                                    app:cardCornerRadius="6dp">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:gravity="center"
                                        android:orientation="vertical">

                                        <ImageView
                                            android:layout_width="40dp"
                                            android:layout_height="40dp"
                                            android:src="@drawable/ic_sub_cat"
                                            android:tint="@color/white" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="4dp"
                                            android:text="In Active"
                                            android:textColor="@color/white"
                                            android:textSize="14dp" />

                                        <TextView
                                            android:id="@+id/tvInActiveSubCat"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="4dp"
                                            android:text="0"
                                            android:textColor="@color/white"
                                            android:textSize="14dp"
                                            android:textStyle="bold" />


                                    </LinearLayout>


                                </androidx.cardview.widget.CardView>





                            </LinearLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">


                        </LinearLayout>


                    </LinearLayout>


                </androidx.cardview.widget.CardView>





                <androidx.cardview.widget.CardView
                    android:id="@+id/cvNews"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/cvSubCategories"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="12dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="6dp"
                    app:cardElevation="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:background="@color/colorstripe"
                            android:gravity="center_horizontal"
                            android:padding="5dp"
                            android:text="News"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="16dp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <androidx.cardview.widget.CardView
                                android:id="@+id/cvAddNews"
                                android:layout_width="0dp"
                                android:layout_height="100dp"
                                android:layout_margin="5dp"
                                android:layout_weight="1"
                                app:cardCornerRadius="50dp">

                                <LinearLayout
                                    android:background="@drawable/bg_add_new"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="40dp"
                                        android:layout_height="40dp"
                                        android:src="@drawable/ic_add"
                                        android:tint="@color/white" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="4dp"
                                        android:text="Add New"
                                        android:textColor="@color/white"
                                        android:textSize="14dp" />


                                </LinearLayout>


                            </androidx.cardview.widget.CardView>
                            <androidx.cardview.widget.CardView
                                android:id="@+id/cvActNews"
                                android:layout_width="0dp"
                                android:layout_height="100dp"
                                android:layout_margin="5dp"
                                android:layout_weight="1"
                                app:cardBackgroundColor="@color/logo_name"
                                app:cardCornerRadius="6dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="40dp"
                                        android:layout_height="40dp"
                                        android:src="@drawable/ic_news"
                                        android:tint="@color/white" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="4dp"
                                        android:text="Active"
                                        android:textColor="@color/white"
                                        android:textSize="14dp" />

                                    <TextView
                                        android:id="@+id/tvActNews"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="4dp"
                                        android:text="0"
                                        android:textColor="@color/white"
                                        android:textSize="14dp"
                                        android:textStyle="bold" />


                                </LinearLayout>


                            </androidx.cardview.widget.CardView>
                            <androidx.cardview.widget.CardView
                                android:id="@+id/cvInActNews"
                                android:layout_width="0dp"
                                android:layout_height="100dp"
                                android:layout_margin="5dp"
                                android:layout_weight="1"
                                app:cardBackgroundColor="@color/colorHighPriority"
                                app:cardCornerRadius="6dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="40dp"
                                        android:layout_height="40dp"
                                        android:src="@drawable/ic_news"
                                        android:tint="@color/white" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="4dp"
                                        android:text="In Active"
                                        android:textColor="@color/white"
                                        android:textSize="14dp" />

                                    <TextView
                                        android:id="@+id/tvInActNews"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="4dp"
                                        android:text="0"
                                        android:textColor="@color/white"
                                        android:textSize="14dp"
                                        android:textStyle="bold" />


                                </LinearLayout>


                            </androidx.cardview.widget.CardView>


                        </LinearLayout>


                    </LinearLayout>


                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:id="@+id/cvChat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/cvNews"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="12dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="6dp"
                    app:cardElevation="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:background="@color/colorstripe"
                            android:gravity="center_horizontal"
                            android:padding="5dp"
                            android:text="Users"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="16dp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/cvActUsers"
                                android:layout_width="0dp"
                                android:layout_height="100dp"
                                android:layout_margin="5dp"
                                android:layout_weight="1"
                                app:cardBackgroundColor="@color/logo_name"
                                app:cardCornerRadius="6dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="40dp"
                                        android:layout_height="40dp"
                                        android:src="@drawable/ic_user"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="4dp"
                                        android:text="Active"
                                        android:textColor="@color/white"
                                        android:textSize="14dp" />

                                    <TextView
                                        android:id="@+id/tvActUsers"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="4dp"
                                        android:text="0"
                                        android:textColor="@color/white"
                                        android:textSize="14dp"
                                        android:textStyle="bold" />


                                </LinearLayout>


                            </androidx.cardview.widget.CardView>



                            <androidx.cardview.widget.CardView
                                android:id="@+id/cvInActUsers"
                                android:layout_width="0dp"
                                android:layout_height="100dp"
                                android:layout_margin="5dp"
                                android:layout_weight="1"
                                app:cardBackgroundColor="@color/colorHighPriority"
                                app:cardCornerRadius="6dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="40dp"
                                        android:layout_height="40dp"
                                        android:src="@drawable/ic_user"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="4dp"
                                        android:text="In Active"
                                        android:textColor="@color/white"
                                        android:textSize="14dp" />

                                    <TextView
                                        android:id="@+id/tvInActUsers"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="4dp"
                                        android:text="0"
                                        android:textColor="@color/white"
                                        android:textSize="14dp"
                                        android:textStyle="bold" />


                                </LinearLayout>


                            </androidx.cardview.widget.CardView>

                        </LinearLayout>


                    </LinearLayout>


                </androidx.cardview.widget.CardView>










            </RelativeLayout>

        </LinearLayout>
    </ScrollView>


</LinearLayout>